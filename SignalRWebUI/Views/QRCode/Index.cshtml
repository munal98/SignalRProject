@{
    ViewData["Title"] = "QR Kod Oluştur";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card border-0 shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="text-center mb-4">
            <i class="bi bi-qr-code fs-1 text-primary"></i>
            <h4 class="fw-bold">QR Kod Oluştur</h4>
        </div>
        <form method="post">
            <div class="form-floating mb-3">
                <input type="text" name="value" class="form-control" id="qrInput" placeholder="İçerik" required />
            </div>
            <button type="submit" class="btn btn-primary w-100 rounded-pill">Oluştur</button>
        </form>

        @if (ViewBag.QrCodeImage != null)
        {
            <div class="text-center mt-4">
                <img src="@ViewBag.QrCodeImage" class="img-fluid border rounded p-2" alt="QR Code" />
            </div>
        }
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
